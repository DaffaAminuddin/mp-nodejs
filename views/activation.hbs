    <div class="pt-5">
    <h3 class="display-5 fw-bold text-body-emphasis">Account Activation Status</h3>
    <div>
        {{#if message2 }}
            <div class="display-6 alert alert-success" role="alert">
                <h2 class="alert-heading">{{message}}</h2>
                <p>Congratulations, your account is active and can be used on our services.</p>
                <hr>                
            </div>
            <div class="alert alert-success" role="alert">
                <a href="/login" style="text-decoration: none;">Continue here to Login</a>
            </div >                        
        {{/if}}

        {{#if message }}
            <div class="alert alert-danger" role="alert">
                <h2 class="alert-heading">{{message2}}</h2>                
                <p>Sorry, your account cannot be activated yet.</p> 
                <a href="/register">Please re-register</a> or <a href="/login">re-send the activation email with login method.</a>
                <hr>
                <a href="/" style="text-decoration: none;">Return to Home page</a>
            </div>            
        {{/if}}
